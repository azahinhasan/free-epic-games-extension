{
  "manifest_version": 3,
  "name": "Free Epic Games Games",
  "version": "1.0.0",
  "description": "Shows current free games from Epic Games Store",
  "permissions": [
    "storage",
    "alarms"
  ],
  "host_permissions": [
    "https://store-site-backend-static-ipv4.ak.epicgames.com/*"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
}
